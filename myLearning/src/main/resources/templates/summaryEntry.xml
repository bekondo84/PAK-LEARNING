<?xml version="1.0" encoding="UTF-8" ?>
<context xmlns="http://www.isis.cm/config/isis-item"
         xmlns:l="http://www.isis.cm/config/list-view"
         xmlns:e="http://www.isis.cm/config/editor-area"
         action="summaryEntryAction">
    <l:list-view>
        <l:list>
            <l:column qualifier="sequence" search="true"/>
            <l:column qualifier="index" search="true"/>
            <l:column qualifier="description" widget="localized" search="true" />
        </l:list>
    </l:list-view>
    <e:editor-area>
        <e:component>
            <e:common>
                <e:form>
                    <e:section name="hac.commons" columns="2" position="100">
                        <e:field qualifier="index" widget="manytoone" />
                        <e:field qualifier="sequence" widget="number" />
                        <e:field qualifier="description" widget="localized"/>
                    </e:section>
                </e:form>
            </e:common>
        </e:component>
    </e:editor-area>
</context>